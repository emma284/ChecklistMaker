{% block content %}

    
    <div class="card bg-light mb-12">
        <h1>Creaci√≥n de Checklist</h1>


        <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
           
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_label(form.nombre) }}
                            {{ form_widget(form.nombre, {'attr': {'class': form_errors(form.nombre) ? 'form-control is-invalid' : 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.nombre) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_label(form.seccion.nombre) }}
                            {{ form_widget(form.seccion.nombre, {'attr': {'class': form_errors(form.seccion.nombre) ? 'form-control is-invalid' : 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.seccion.nombre) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            {{ form_label(form.seccion.tareas) }}
                            {{ form_widget(form.seccion.tareas, {'attr': {'class': form_errors(form.seccion.tareas) ? 'form-control is-invalid' : 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.seccion.tareas) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div>
                            {#{{ form_widget(form.save) }}#}
                            <button type="button" class="btn btn-primary" onclick={{ form_widget(form.save) }}</button>
                        </div>
                        <div>&nbsp;</div>{# Espacio en blanco p/separar botones #}
                    </div>
                {{form_end(form)}}
        </div>
    </div>
{% endblock %}