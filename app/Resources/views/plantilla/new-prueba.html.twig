{% block breadcrumbItems %}

    <li class="breadcrumb-item" onclick="window.location.href = '{{ path('resumen_evaluacion') }}'"><a href="#">Resumen</a></li>
    <li class="breadcrumb-item" onclick="window.location.href = '{{ path('listado_plantilla') }}'"><a href="#">Mis Checklist</a></li>
    <li class="breadcrumb-item" onclick="window.location.href = '{{ path('new_plantilla') }}'"><a href="#">Generar Checklist</a></li>

{% endblock %}

{% block content %}
    
    <div class="card-body">
        <div class="card-header"><h1>CHECKLIST DE CATEGORIZACIÓN AMBIENTAL</h1></div>
        <div class="form-group col-md-12">

            <div class="form-group row">
                <label for="inputPassword4" class="col-sm-3">RAZÓN SOCIAL</label>
                <input type="text" class="form-control col-sm-3" id="razonSocial-plantilla">
            
                <label for="inputPassword4" class="col-sm-3">EXPEDIENTE N°</label>
                <input type="text" class="form-control col-sm-3" id="expedienteN-plantilla">
            </div> 
            <div class="form-group row">
                <label for="inputPassword4" class="col-sm-3">FECHA INICIO EXPEDIENTE</label>
                <input type="text" class="form-control col-sm-3" id="fechaInicioExpediente-plantilla">
            
                <label for="inputPassword4" class="col-sm-3">EVALUADOR</label>
                <input type="text" class="form-control col-sm-3" id="razonSocial-plantilla">
            </div> 
            
            <div class="form-group row">
                <label for="inputPassword4"class="col-sm-3">VERSIÓN</label>
                <input type="text" class="form-control col-sm-3" id="razonSocial-plantilla">
            
                <label for="inputPassword4"class="col-sm-3">INICIO EVALUACIÓN</label>
                <input type="text" class="form-control col-sm-3" id="razonSocial-plantilla">
            </div> 
            <div class="form-group row">
                <label for="inputPassword4"class="col-sm-3">FIN EVALUACIÓN</label>
                <input type="text" class="form-control col-sm-3" id="razonSocial-plantilla">
            
                <label for="inputPassword4"class="col-sm-3">DÍAS DE EVALUACIÓN</label>
                <input type="text" class="form-control col-sm-3" id="razonSocial-plantilla">
            </div> 
            
        </div>
                        
        
        <div class="card-header">SUB-RUTINA</div>
     
        <div class="form-group col-md-12">

            <div class="form-group row">
                
                <label for="I_INV" class="col-sm-2">Investigar empresa: </label>
                <select class="form-control col-sm-2">
                    <option value=""  selected="selected" ></option>
                    <option value="a" data-choice="a" data-key="0">NO HECHO</option>
                    <option value="b" data-choice="b" data-key="1">HECHO</option>

                </select>
            </div>
        
            <div class="form-group row">
                <label for="I_INV" class="col-sm-3">Indicar si la empresa existe: </label>
                <select id='indicarSiExisteEmpresa' class="form-control col-sm-1">
                    
                    <option value=""  selected="selected"></option>
                    <option value="a" data-choice="a" data-key="0">SI</option>
                    <option value="b" data-choice="b" data-key="1">NO</option>

                </select>
                <div id='advertenciaSiExisteEmpresa' class="col-sm-4">
                    <button type="button" class="btn btn-info btn-block" disabled>CONTINUAR EVALUACIÓN</button>
                </div>
                <div id='advertenciaNoExisteEmpresa' class="col-sm-4">
                    <button type="button" class="btn btn-danger btn-block" disabled>ENVIAR NOTIFICACIÓN</button>
                </div>
            </div>
        
            <div class="form-group row">
                
                <label for="I_INV" class="col-sm-3">Indicar si respondió en plazo: </label>
                <select id='indicarSiRespondioEnPlazo' class="form-control col-sm-1 ">
                    
                    <option value=""  selected="selected"></option>
                    <option value="a" data-choice="a" data-key="0">SI</option>
                    <option value="b" data-choice="b" data-key="1">NO</option>

                </select>
                <div id='advertenciaSiRespondio' class="col-sm-4">
                    <button type="button" class="btn btn-info btn-block" disabled>ACCIONAR SEGÚN EL CASO</button>
                </div>
                <div id='advertenciaNoRespondio' class="col-sm-4">
                    <button type="button" class="btn btn-danger btn-block" disabled>DESESTIMAR</button>
                </div>
            </div>
        
            <div class="form-group row">
                <label for="I_INV" class="col-sm-3">Indicar si se relocalizó: </label>
                <select id='indicarSiSeRelocalizo' class="form-control col-sm-1">
                    
                    <option value=""  selected="selected"></option>
                    <option value="a" data-choice="a" data-key="0">SI</option>
                    <option value="b" data-choice="b" data-key="1">NO</option>

                </select>
                <div id='advertenciaSiSeRelocalizo' class="col-sm-4">
                    <button type="button" class="btn btn-danger btn-block" disabled>ENVIAR NOTIFICACIÓN Y DESESTIMAR</button>
                </div>
                <div id='advertenciaNoSeRelocalizo' class="col-sm-4">
                    <button type="button" class="btn btn-info btn-block" disabled>CONTINUAR EVALUACIÓN</button>
                </div>
            </div>

            <div class="form-group row">
                
                <label for="I_INV" class="col-sm-3">Se desestima por otros motivos: </label>
                <select id='indicarSiSeDesestima' class="form-control col-sm-1 ">
                    
                    <option value=""  selected="selected"></option>
                    <option value="a" data-choice="a" data-key="0">SI</option>
                    <option value="b" data-choice="b" data-key="1">NO</option>

                </select>
                <div id='advertenciaSiSeDesestima' class="col-sm-4">
                    <button type="button" class="btn btn-danger btn-block" disabled>DESESTIMAR</button>
                </div>
            </div>
        </div>

        <div class="card-header">ESTANDAR</div>
        
        <div class="form-group col-md-12">
        
                <div class="form-group row">
                    
                    <label for="I_INV" class="col-sm-3">Forma de presentación: </label>
                    <select class="form-control col-sm-1">
                        
                        <option value=""  selected="selected"></option>
                        <option value="a" data-choice="a" data-key="0">NUEVO</option>
                        <option value="b" data-choice="b" data-key="1">VIEJO</option>

                    </select>
                </div>

                <div class="form-group row">
                    
                    <label for="I_INV" class="col-sm-3">Estado formulario: </label>
                    <select class="form-control col-sm-1">
                        
                        <option value=""  selected="selected"></option>
                        <option value="a" data-choice="a" data-key="0">ABIERTO</option>
                        <option value="b" data-choice="b" data-key="1">CERRADO</option>

                    </select>
                </div>

                <div class="form-group row">
                    
                    <label for="I_INV" class="col-sm-3">indicar si declara actividad: </label>
                    <select class="form-control col-sm-1">
                        
                        <option value=""  selected="selected"></option>
                        <option value="a" data-choice="a" data-key="0">SI</option>
                        <option value="b" data-choice="b" data-key="1">NO</option>

                    </select>
                </div>

                <div class="form-group row">
                
                    
                    <label for="inputPassword4 " class="col-sm-3">Definir actividad:</label>
                    <input type="text" id="razonSocial-plantilla" class="form-control col-sm-6">
                    
                    
                </div>

                <div class="form-group row">
            
                    <label for="inputPassword4" class="col-sm-3">N° de CUACM:</label>
                    <input type="text" id="razonSocial-plantilla" class="form-control col-sm-1">
                    
                </div>

                <div class="form-group row">
            
                    <label for="inputPassword4" class="col-sm-3">Nombre de CUACM:</label>
                    <input type="text" id="razonSocial-plantilla" class="form-control col-sm-1">
                    
                </div>
               
                <div class="form-group row">
                    
                    <label for="I_INV" class="col-sm-3">Estándar al que pertenece: </label>
                    <select class="form-control col-sm-1">
                        
                        <option value=""  selected="selected"></option>
                        <option value="a" data-choice="a" data-key="0">1</option>
                        <option value="b" data-choice="b" data-key="1">2</option>
                        <option value="b" data-choice="b" data-key="2">3</option>
                    </select>
                </div>

        </div>  

        <div class="form-inline col-md-12">
        
            <button type="button" class="btn btn-primary ml-auto" >Guardar</button>
            <div>&nbsp;</div>
            <button type="button" class="btn btn-primary " onclick="window.location.href = '{{ path('formularioA_new') }}'">Siguiente</button>
        </div>

    </div>
{% endblock %}